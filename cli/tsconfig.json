     "compilerOptions": {
          "target": "ES2022",
          "module": "ESNext",
          "moduleResolution": "bundler",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true,
          "rootDir": "src",
          "outDir": "dist",
          "types": ["node"]
     },
     "include": ["src"]
}
